        <MudNavLink Href="Users/MonthlySalaries" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AttachMoney">Manage Monthly Salaries</MudNavLink>
    </MudNavGroup>

    <MudDivider Class="my-2" />

    <MudNavLink Href="/settings"
                Icon="@Icons.Material.Filled.Settings"
                IconColor="Color.Default">
        Settings
    </MudNavLink>

    <MudNavLink Href="/help"
                Icon="@Icons.Material.Filled.Help"
                IconColor="Color.Default">
        Help & Support
    </MudNavLink>
</MudNavMenu>

<style>
    .mud-nav-link-text {
        font-weight: 500;
    }

    .mud-nav-link:hover {
        background-color: rgba(var(--mud-palette-primary-rgb), 0.08);
        border-radius: 4px;
    }

    .mud-nav-link.active {
        background-color: rgba(var(--mud-palette-primary-rgb), 0.12);
        border-radius: 4px;
        color: var(--mud-palette-primary);
    }

    .mud-nav-group .mud-nav-link {
        padding-left: 32px;
    }
</style>

