<MudNavMenu>
    <MudText Typo="Typo.h6" Class="px-4 py-2">
        Navigation
    </MudText>

    <MudDivider Class="mb-2" />

    <MudNavLink Href="/"
                Icon="@Icons.Material.Filled.Dashboard"
                IconColor="Color.Primary">
        Dashboard
    </MudNavLink>


    <MudNavLink Href="/orders"
                Icon="@Icons.Material.Filled.AttachMoney"
                IconColor="Color.Success">
        Donations
    </MudNavLink>

    <MudNavLink Href="/orders"
                Icon="@Icons.Material.Filled.Assignment"
                IconColor="Color.Secondary">
        Job Cards
    </MudNavLink>

    <MudNavLink Href="/reports"
                Icon="@Icons.Material.Filled.Analytics"
                IconColor="Color.Info">
        Reports
    </MudNavLink>

    <MudNavLink Href="/notifications"
                Icon="@Icons.Material.Filled.Notifications"
                IconColor="Color.Success"
                Badge="3"
                BadgeColor="Color.Error">
